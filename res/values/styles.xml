<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="BoardList">
  	<item name="android:background">@drawable/back</item>
  </style>
   	

  <style name="BoardListElem">    
    <item name="android:background">@color/transparent</item>
    <item name="android:paddingLeft">10dip</item>
    <item name="android:paddingRight">10dip</item>
    <item name="android:paddingTop">8dip</item>
    <item name="android:paddingBottom">8dip</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    
    
    
  </style>
  
  
  <style name="BoardListElemName">
  	<item name="android:layout_width">wrap_content</item>
  	<item name="android:textSize">20dip</item>
	<item name="android:textColor">@color/light_grey</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingLeft">5dip</item>
    <item name="android:typeface">sans</item>
    <item name="android:text">bold</item>
  </style>
  
  <style name="BoardListElemScore">
  	<item name="android:layout_width">wrap_content</item>
  	<item name="android:textSize">12dip</item>
	<item name="android:textColor">@color/light_grey</item>    
  </style>
  
  <style name="ResultTitle">
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:gravity">center_horizontal</item>
  	<item name="android:textSize">24dip</item>
	<item name="android:textColor">@color/light_grey</item>  
	<item name="android:background">@drawable/riquadroc</item>
	<item name="android:textStyle">bold</item>
	<item name="android:padding">12dip</item>
  </style>

  <style name="ResultMessage">
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:layout_gravity">center_horizontal</item>
  	<item name="android:textSize">18dip</item>
	<item name="android:textColor">@color/light_grey</item>
	<item name="android:background">@drawable/riquadroa</item>
	<item name="android:padding">12dip</item>    
  </style>  
  
  <style name="ResultView">
  	<item name="android:background">@drawable/back</item>	
  </style>
  
  <style name="ResultButtons">
	<item name="android:gravity">bottom</item>
	<item name="android:paddingBottom">20dip</item>
  </style>
  
  <style name="ResultDescription">
  	<item name="android:layout_width">wrap_content</item>
  	<item name="android:textSize">12dip</item>
	<item name="android:textColor">@color/light_grey</item>    
  </style>
  
  <style name="ResultButton">
  	<item name="android:layout_gravity">center</item>
  	<item name="android:textSize">12dip</item>
	<item name="android:textColor">@color/light_grey</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>   
    <item name="android:background">@null</item>
  </style>
  
  <style name="ResultButtonSingle">
  	<item name="android:layout_gravity">center</item>
  	<item name="android:gravity">center</item>
  	<item name="android:textSize">12dip</item>
	<item name="android:textColor">@color/light_grey</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:textStyle">bold</item>   
    <item name="android:background">@null</item>
  </style>    

  <style name="ResultButtonEmpty">
  	<item name="android:layout_gravity">center</item>
  	<item name="android:layout_height">wrap_content</item>
    <item name="android:background">@null</item>
  </style>  

  <style name="ResultSeparator">
  	<item name="android:layout_height">8dip</item>
  	<item name="android:background">@null</item>
  	<item name="android:layout_width">wrap_content</item>
  </style>    
  
</resources>
