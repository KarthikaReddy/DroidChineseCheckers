<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.fede.checkers"
      android:versionCode="1"
      android:versionName="1.0">
      
      	<uses-sdk android:minSdkVersion="4" />

	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <application android:icon="@drawable/icon" android:debuggable="true" android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".ui.CheckersGameActivity"
                  android:configChanges="orientation">
            
        </activity>
                <activity android:name=".ui.CheckersMainMenu"
                  android:configChanges="orientation">
                  <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity android:name=".ui.BoardsListActivity"
                  android:configChanges="orientation">
                  
                  
        </activity>
	<!-- The application's publisher ID assigned by AdMob -->
	<meta-data android:value="PUBLISHERIDHERE" android:name="ADMOB_PUBLISHER_ID" />
	<!-- AdMobActivity definition -->
	<activity android:name="com.admob.android.ads.AdMobActivity" android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:configChanges="orientation|keyboard|keyboardHidden" />
	<!-- Track Market installs -->
	<receiver android:name="com.admob.android.ads.analytics.InstallReceiver" android:exported="true">
	<intent-filter> <action android:name="com.android.vending.INSTALL_REFERRER" />
	</intent-filter> </receiver>
    </application>


</manifest> 
